{
    "rules": {
        "no-loop-func": "warn",
        "no-undef": "warn",
        "no-unused-vars": "warn",
        "curly": "warn",
        "quotes": ["warn", "single"],
        "eqeqeq": "warn",
        "semi": ["warn"],
        "keyword-spacing": ["warn", {
            "before": true
        }]
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    }
}

